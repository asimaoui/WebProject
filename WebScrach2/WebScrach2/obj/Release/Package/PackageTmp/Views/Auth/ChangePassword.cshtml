@model WebScrach2.Models.RenamePassword

@{
    ViewBag.Title = "ChangePassword";
}



<div class="slides-text probootstrap-animate fadeInUp probootstrap-animated" style="padding-top: 0">
    <h2 class="col-md-12">Change Password</h2>
</div>

<section class="probootstrap-animate fadeInUp probootstrap-animated">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                @Html.ValidationSummary(true)

                @using (Html.BeginForm("ChangePassword", "Auth", null, FormMethod.Post, htmlAttributes: new { @class = "probootstrap-form mb60" }))
                {
                    @Html.HiddenFor(m=> m.UserName)
                    @Html.HiddenFor(m => m.ReturnUrl)

                    <div class="form-group">
                        <label for="email">Password</label>
                        @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label for="email">Confirm Password</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" id="submit" name="submit" value="Change Password">
                    </div>
                }
            </div>
        </div>
    </div>
</section>




