@model WebScrach2.Models.Movy

@{
    ViewBag.Title = "Create";
}



<div class="slides-text probootstrap-animate fadeInUp probootstrap-animated" style="padding-top: 0">
    <h2 class="col-md-12">Add Movie</h2>
</div>

<section class="probootstrap-animate fadeInUp probootstrap-animated">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                @Html.ValidationSummary(true)

                @using (Html.BeginForm("Create", "Movies", null, FormMethod.Post, htmlAttributes: new { @class = "probootstrap-form mb60" }))
                {

                    <div class="form-group">
                        <label >Title</label>
                        @Html.TextBoxFor(m => m.Title, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label >Description</label>
                        @Html.TextBoxFor(m => m.Description, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
    <div class="form-group">
        <label>Rating</label>
        @Html.TextBoxFor(m => m.Rating, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(m => m.Price, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Image link</label>
        @Html.TextBoxFor(m => m.Image, htmlAttributes: new { @class = "form-control", @autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" id="submit" name="submit" value="Save">
    </div>
    <div>
        @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer })
    </div>

                }
            </div>
        </div>
    </div>
</section>














