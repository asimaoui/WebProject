@*@using Microsoft.AspNet.Identity*@
@if (Request.IsAuthenticated)
{

        
    
    if (User.IsInRole("admin"))
    {
        <li class="nav-item">@Html.ActionLink("Add new Admin", "RegisterAdmin", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    }


    using (Html.BeginForm("Logout", "Auth", FormMethod.Post, new { id = "logoutForm" }))
    {
        
        <li><a href="javascript:document.getElementById('logoutForm').submit()" , class="nav-link">Log off</a></li>
    }

    <li class="nav-item">@Html.ActionLink(User.Identity.Name, "ChangePassword", "Auth", routeValues: new { UserName = User.Identity.Name }, htmlAttributes: new { title = "Manage", @class = "nav-link" })
    </li>

}
else
{
    if (User.IsInRole("customer"))
    {
        <li class="nav-item">@Html.ActionLink("New User", "RegisterCustomer", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    }
    <li class="nav-item">@Html.ActionLink("Log in", "Login", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
}